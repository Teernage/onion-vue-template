{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "eslint": "eslint src --ext .js,.vue,.ts --fix --cache",
    "lint:prettier": "prettier --write \"src/**/*.{ts,json,css,vue,html,md}\"",
    "lint:lint-staged": "lint-staged",
    "commit-msg": "commitlint --config ./commitlint/.commitlintrc.cjs --edit --format ./commitlint/formatter.cjs",
    "prepare": "husky install",
    "dev": "pnpm run lint:prettier && vite",
    "build": "pnpm run lint:prettier && vite build"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "element-plus": "^2.7.8",
    "pinia": "^2.2.0",
    "pinia-plugin-persistedstate": "^3.2.1",
    "radash": "^12.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/format": "^19.5.0",
    "@rollup/plugin-json": "^6.1.0",
    "@types/chrome": "^0.0.287",
    "@types/node": "^20.14.12",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^13.0.0",
    "axios-mock-adapter": "^2.0.0",
    "chalk": "4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.28.0",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "lint-staged": "^15.2.10",
    "postcss-selector-parser": "^6.1.1",
    "prettier": "^3.3.3",
    "terser": "^5.33.0",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^0.19.0",
    "unplugin-vue-components": "^0.28.0",
    "vite": "^6.0.7",
    "vue-tsc": "^2.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,less,styl,html}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "configFile": "./commitlint/.commitlintrc.cjs"
  }
}
